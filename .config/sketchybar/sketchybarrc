#!/usr/bin/env bash
# This is a demo config to showcase some of the most important commands.
# It is meant to be changed and configured, as it is intentionally kept sparse.
# For a (much) more advanced configuration example see my dotfiles:
# https://github.com/FelixKratz/dotfiles

PLUGIN_DIR="$CONFIG_DIR/plugins"

##### Bar Appearance #####
# Configuring the general appearance of the bar.
# These are only some of the options available. For all options see:
# https://felixkratz.github.io/SketchyBar/config/bar
# If you are looking for other colors, see the color picker:
# https://felixkratz.github.io/SketchyBar/config/tricks#color-picker

sketchybar --bar position=top height=40 color=0x00000000 display=main padding_right=10
sketchybar --add event rift_windows_changed --add event rift_workspace_changed --add event rift_windows_title

##### Changing Defaults #####
# We now change some default values, which are applied to all further items.
# For a full list of all available item properties see:
# https://felixkratz.github.io/SketchyBar/config/items
source "$CONFIG_DIR/colors.sh"
source ~/.config/icon_map.sh


default=(
  padding_left=5
  padding_right=5
  icon.font="Hack Nerd Font:Regular:17.0"
  label.font="Hack Nerd Font:Bold:14.0"
#  background.color=0x40000000
  # black color
  label.color=0xff$COLOR_FOREGROUND
  icon.color=0xff$COLOR_FOREGROUND
#  background.color=0x00000000
  icon.padding_left=4
  label.padding_right=2
  icon.padding_right=2
)
sketchybar --default "${default[@]}"

##### Adding Mission Control Space Indicators #####
# Let's add some mission control spaces:
# https://felixkratz.github.io/SketchyBar/config/components#space----associate-mission-control-spaces-with-an-item
# to indicate active and available mission control spaces.
#
#sketchybar --add alias "Raycast" left
dummy_space=(
    icon.padding_left=7
	icon.padding_right=-5
  	label.padding_right=10
	label.padding_left=7
	padding_right=0
	icon.font="Hack Nerd Font:Regular:11.0"
	border_color=0xff$COLOR_SELECTION
    background.color=0xff$COLOR_SELECTION
	background.border_color=0xff$COLOR_SELECTION
    background.corner_radius=20
	label.font="sketchybar-app-font:Regular:16.0"
    background.height=24
	icon.drawing=on
#	icon.color=0xff$COLOR_FOREGROUND
    label.drawing=off
    click_script="rift-cli execute workspace switch $sid"
  )


addRiftSpaces() {
	# Add the rift workspace change event
	sketchybar --add event rift_workspace_changed

#	sendLog "Detected rift spaces : ${SPACES[*]}" "vomit"

	for sid in "${SPACES[@]}"; do # For each existing space add corresponding item
		space=("${dummy_space[@]}")
		space+=(
			icon="$sid"
			script="$PLUGIN_DIR/space.sh $workspace"
			drawing=on
		)


		sid=$(echo "$sid" | sed 's/ /__/g') # Format name for sketchybar

		sketchybar --add item space.$sid left \
			--set space.$sid "${space[@]}" \
			--subscribe space.$sid rift_workspace_changed mouse.clicked mouse.entered rift_windows_changed

#		sendLog "Add rift space item id : $sid" "vomit"
	done

	separator+=(
		click_script="echo 'Rift does not support creating new workspaces via sketchybar'"
	)

	}
while IFS= read -r line; do
		SPACES+=("$line")
	done < <(rift-cli query workspaces 2>/dev/null | jq -r '.[] | .name')
addRiftSpaces

sketchybar --hotload true

# grayish background for spaces
sketchybar --add bracket spaces '/space\..*/'               \
           --set         spaces background.color=0x40$COLOR_YELLOW \
                                background.corner_radius=20  \
                                background.border_color=0x40$COLOR_YELLOW     \
                                background.border_width=1              \
                                background.height=31 padding_left=0 padding_right=0

##### Adding Left Items #####
# We add some regular items to the left side of the bar, where
# only the properties deviating from the current defaults need to be set

sketchybar --add item chevron left \
           --set chevron icon= label.drawing=off padding_left=0 padding_right=0 \
           --add item front_app left \
           --set front_app icon.drawing=off script="$PLUGIN_DIR/front_app.sh" \
           --subscribe front_app front_app_switched rift_windows_title

##### Adding Right Items #####
# In the same way as the left items we can add items to the right side.
# Additional position (e.g. center) are available, see:
# https://felixkratz.github.io/SketchyBar/config/items#adding-items-to-sketchybar

# Some items refresh on a fixed cycle, e.g. the clock runs its script once
# every 10s. Other items respond to events they subscribe to, e.g. the
# volume.sh script is only executed once an actual change in system audio
# volume is registered. More info about the event system can be found here:
# https://felixkratz.github.io/SketchyBar/config/events



sketchybar --add alias "Control Centre,FocusModes" right \
		   --set "Control Centre,FocusModes" padding_left=-15 padding_right=-5 alias.color=0xff$COLOR_YELLOW \
		--add item clock right \
           --set clock update_freq=10 icon=  script="$PLUGIN_DIR/clock.sh" padding_right=10 \
           --add item volume right \
           --set volume script="$PLUGIN_DIR/volume.sh" click_script="sketchybar -m --set \$NAME popup.drawing=toggle" popup.background.color=0x40ffffff \
           --subscribe volume volume_change \
		   --add item power right \
		   --set power update_freq=30 script="$PLUGIN_DIR/power.sh" \
		   --subscribe power power_source_change \
           --add item battery right \
           --add alias "Control Centre,Fantastical" right \
           --set "Control Centre,Fantastical"  alias.color=0xff$COLOR_FOREGROUND padding_right=-14  \
		   		  click_script="open -a 'Fantastical'" \
           --set battery update_freq=120 label.drawing=off script="$PLUGIN_DIR/battery.sh" \
           --subscribe battery system_woke power_source_change  mouse.entered mouse.exited \

sketchybar --add slider volume_options popup.volume 100 \
		   --set volume_options slider.highlight_color=0xff$COLOR_YELLOW   slider.background.height=6 script='test -z "$PERCENTAGE" || osascript -e "set Volume "$(echo "scale=10; $PERCENTAGE / 10.0" | bc )""' \
		   --subscribe volume_options mouse.clicked



sketchybar --add bracket all_utils clock item volume power  "Control Centre,Fantastical" "Control Centre,FocusModes" \
		   --set all_utils background.color=0x40$COLOR_YELLOW \
		   	background.height=30 background.corner_radius=20 background.padding=10
sketchybar --add bracket utils power battery volume \
		   --set utils background.color=0x40$COLOR_YELLOW \
		   	background.height=30 background.corner_radius=5 background.padding=10 background.corner_radius=15

##### Force all scripts to run the first time (never do this in a script) #####
sketchybar --update
